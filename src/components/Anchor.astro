---
const { url, goToAnotherWeb = false } = Astro.props;
---

{
  goToAnotherWeb && (
    <a
      href={url}
      target="_blank"
      rel="noreferrer noopener"
      aria-label={Astro.props["aria-label"]}
    >
      <slot />
    </a>
  )
}

{
  !goToAnotherWeb && (
    <a href={url} aria-label={Astro.props["aria-label"]}>
      <slot />
    </a>
  )
}
