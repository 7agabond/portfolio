---
import About from "../components/About.astro";
import Header from "../components/Header.astro";
import Home from "../components/Home.astro";
import Knowledge from "../components/Knowledge.astro";
import Projects from "../components/Projects.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import { readResume } from "../services/github";

const { basics, skills } = await readResume();
const { summary } = basics;
---

<Layout>
  <Header />

  <main>
    <Home />
    <About {summary} />
    <Knowledge {skills} />
    <Projects />
  </main>
</Layout>

<style>
  :root {
    --palette-black: #202124;
    --palette-white: #fafafa;
    --palette-grey: #6565652e;
    --font-family-text: "Space Grotesk";
    --font-family-title: "Nunito Sans";
    --transition-one-milisecond: 0.1s all ease;
    --transition-two-milisecond: 0.2s all ease;
    --transition-half-second: 0.5s all ease;
    --border-radius-min: 0.25rem;
    --border-radius-med: 1rem;
    --border-radius-max: 2rem;
  }

  * {
    font-family: "Space Grotesk", system-ui, -apple-system, BlinkMacSystemFont,
      "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
      "Helvetica Neue", sans-serif;
  }

  body {
    display: grid;
    transition: var(--transition-one-milisecond);
    background-color: var(--palette-white);
    color: var(--palette-black);

    :is(.dark) & {
      background-color: var(--palette-black);
      color: var(--palette-white);
    }
  }

  :global(header > .header-container),
  main {
    max-width: 80ch;
    justify-self: center;
    width: 100%;
  }

  & main,
  :global(header) {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  main {
    display: grid;
    gap: 10rem;
    padding-bottom: 5rem;
  }
</style>

<script is:inline>
// Dark mode
const theme = (() => {
  const darkModeValue = localStorage.getItem("theme");

  if (darkModeValue) {
    document.documentElement.classList.add(
      darkModeValue === "light" ? "light" : "dark"
    );
    return localStorage.getItem("theme");
  }

  return "light";
})();

localStorage.setItem("theme", theme);
</script>
